{
  "name": "renovate-config",
  "description": "My shareable config for Renovate (renovateapp.com)",
  "version": "1.0.0",
  "author": "Teppei Sato <teppeis@gmail.com>",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "homepage": "https://github.com/teppeis/renovate-config",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/teppeis/renovate-config.git"
  },
  "bugs": {
    "url": "https://github.com/teppeis/renovate-config/issues"
  },
  "keywords": [
    "npm",
    "renovate"
  ],
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":noUnscheduledUpdates",
        ":separatePatchReleases",
        ":automergePatch",
        ":maintainLockFilesMonthly",
        ":prConcurrentLimit10",
        ":prNotPending",
        ":preserveSemverRanges",
        ":unpublishSafe"
      ],
      "upgradeInRange": true,
      "schedule": "before 6am",
      "timezone": "Asia/Tokyo"
    }
  }
}
